{
  "name": "@commercelayer/js-dropin",
  "version": "1.5.14",
  "description": "The Official Commerce Layer JS library",
  "module": "./lib/index.js",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "test": "playwright test",
    "test:coverage": "npx nyc playwright test && pnpm coverage:report",
    "coverage:report": "npx nyc report --reporter=html",
    "ci": "pnpm i && pnpm build && npx playwright install --with-deps chromium && CI=1 pnpm t",
    "build": "rm -rf ./dist && tsc -b --force && tsc-alias && pnpm postbuild",
    "postbuild": "esbuild ./dist/index.js --bundle --minify --format=esm --outdir=lib",
    "start": "tsc -w & tsc-alias -w & pnpm start:bundle & pnpm start:server",
    "start:bundle": "esbuild ./dist/index.js --bundle --outdir=lib --format=esm --watch",
    "start:server": "http-server -c-1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/commercelayer/commercelayer-js-dropin.git"
  },
  "keywords": [
    "jamstack",
    "headless",
    "ecommerce",
    "api"
  ],
  "author": "Filippo Conforti",
  "contributors": [
    {
      "name": "Alessandro Casazza",
      "email": "alessandro@commercelayer.io"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/commercelayer/commercelayer-js-dropin/issues"
  },
  "homepage": "https://github.com/commercelayer/commercelayer-js-dropin#readme",
  "dependencies": {
    "@commercelayer/js-auth": "^2.3.0",
    "@commercelayer/sdk": "^4.15.1",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "js-cookie": "^3.0.1",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@babel/plugin-proposal-object-rest-spread": "^7.18.9",
    "@babel/plugin-transform-runtime": "^7.18.9",
    "@babel/preset-env": "^7.18.9",
    "@babel/preset-typescript": "^7.18.6",
    "@playwright/test": "^1.24.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.5",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@types/js-cookie": "^3.0.2",
    "@types/lodash": "^4.14.182",
    "@types/node": "^18.6.1",
    "esbuild": "^0.14.50",
    "http-server": "^14.1.1",
    "playwright": "^1.24.0",
    "querystring": "^0.2.1",
    "semantic-release": "^19.0.3",
    "tsc-alias": "^1.7.0",
    "typescript": "^4.7.4"
  }
}
